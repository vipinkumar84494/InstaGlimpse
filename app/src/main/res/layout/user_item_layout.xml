<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp"
    android:background="@drawable/button_black_background"
   >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_search"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_username_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user name"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/user_profile_search"
            />
        <TextView
            android:id="@+id/tv_user_profile_name_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user profile name"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_username_search"
            />
        <Button
            android:id="@+id/btn_follow_profile"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/grey"
            android:text="Follow"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:layout_below="@+id/tv_user_profile_name_search"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</RelativeLayout>